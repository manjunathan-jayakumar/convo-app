
<%= form_with(model:[@chat_room, @message], remote: true, class: "d-flex",
              data:{ controller: 'reset-form', action: "turbo:submit-end->reset-form#reset"}) do |f| %>
    <%= f.text_field :context, autocomplete: 'off', class: "form-control", placeholder: "Type your message here..." %>
    <%= f.submit 'send message', data:{ disable_with: false}, class: "btn btn-primary" %>
<% end %>